# Backend Environment Variables
# NEVER commit this file to version control

# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com

# OpenAI Configuration (Server-side only - NEVER expose to client)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.7

# Redis Configuration (Rate Limiting)
REDIS_URL=redis://localhost:6379
# For production (Upstash): redis://default:password@host:port

# Rate Limiting
RATE_LIMIT_FREE_DAILY=5
RATE_LIMIT_FREE_PER_MINUTE=1
RATE_LIMIT_PRO_DAILY=100
RATE_LIMIT_PRO_PER_MINUTE=10

# Security
CORS_ORIGIN=*
# For production: https://your-app-domain.com

# Logging
LOG_LEVEL=info
